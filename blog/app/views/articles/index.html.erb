<h1>Listagem de artigos</h1>
 
<table>
  <tr>
    <th>Titulo</th>
    <th>Texto</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Mostrar', article_path(article) %></td>
      <td><%= link_to 'Editar', edit_article_path(article) %></td>
      <td>
        <%=
          link_to 'Excluir',
          article_path(article),
          method: :delete, data: { confirm: 'Voce tem certeza?' }
        %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Novo artigo', new_article_path %>